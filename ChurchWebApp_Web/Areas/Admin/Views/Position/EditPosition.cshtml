@using ChurchWebApp_Web.Areas.Admin.Models
@model PositionVM

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<button class="btn btn-default" data-toggle="button">
    <i class="fa fa-book"></i> Edit Position
</button>  

@using (Html.BeginForm("savePosition","Position"))
{
   
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)

            <div class="form-group">
                @Html.Label("Position Name", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.position_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.position_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                    <div class="col-md-offset-6 col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
        </div>

    
}


