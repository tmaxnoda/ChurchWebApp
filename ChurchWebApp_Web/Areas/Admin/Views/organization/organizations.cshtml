@model IEnumerable<ChurchWebApp_Web.Areas.Admin.Models.OrganizationRegistrationVM>

@{
    ViewBag.Title = "organizations";
    Layout = "~/Views/Shared/_AdminTable.cshtml";
}

<div class="space15"></div>
<section id="flip-scroll">
    <table class="display table table-bordered table-striped table-condensed cf" id="dynamic-table">
        <thead class="cf">
            <tr>
               
                <th>Name</th>
                <th>Country</th>
                <th>State</th>
                <th>City</th>
                <th>Address</th>
                <th>Heirarchy</th>
                <th>Action</th>


              
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.organization_name</td>
                    <td>@item.tbl_country.country_name</td>
                    <td>@item.organization_state</td>
                    <td>@item.organization_city</td>
                    <td>@item.organization_address</td>
                    <td>@item.orgdiscription</td>
                    <td>
                        <div class="btn-group">
                            @*<a class="btn btn-default" href="#">Actions</a>*@
                            <a class="btn btn-primary dropdown-toggle" aria-expanded="false" href="#" data-toggle="dropdown"><span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                @*<li><a href='@Url.Action("Details","Organization",new { id=item.id})'>Details</a></li>*@
                                <li><a id="deleteItem" class="deleteItem" data-target="#basic" data-toggle="modal" data-id="@item.id">Delete</a></li>
                                <li>
                                    <a href='@Url.Action("editorganization","Organization",new { id=item.id})'>Edit</a>
                                </li>
                            </ul>
                        </div>
                    </td>
                    
                </tr>
            }
            
           
        </tbody>
    </table>
</section>

<div class="modal fade" id="basic" tabindex="-1" role="basic" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Delete Confirmation</h4>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this Organization?
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" type="button" class="btn btn-default">Cancel</button>
                <button id="btnContinueDelete" type="button" class="btn btn-primary">Delete</button>
            </div>
        </div>
    </div>
</div>
