@using ChurchWebApp_Web.Areas.Admin.Models
@model IEnumerable<Member_BiodataVM>
@{
    ViewBag.Title = "memberbiodatas";
    Layout = "~/Views/Shared/_BiodataTableLayout.cshtml";
}

<div class="space15"></div>
<section id="flip-scroll">
    <table class="display table table-bordered table-striped table-condensed cf" id="dynamic-table">
        <thead class="cf">
            <tr>

                <th>Name</th>
                <th>Gender</th>
                <th>Address</th>
                <th>Phone Num</th>
                <th>Day of Init Att</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.GetFullName</td>
                    <td>@item.gender</td>
                    <td>@item.house_address</td>
                    <td>@item.phone_number</td>
                    <td>@Convert.ToDateTime(item.date_of_initial_attendant).ToString("MMM-yyy")</td>


                    <td>
                        <div class="btn-group">
                            @*<a class="btn btn-default" href="#">Actions</a>*@
                            <a class="btn btn-primary dropdown-toggle" aria-expanded="false" href="#" data-toggle="dropdown"><span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                @*<li><a href='@Url.Action("Details","Organization",new { id=item.id})'>Details</a></li>*@

                                <li><a id="deleteItem" class="deleteItem" data-target="#basic" data-toggle="modal" data-id="@item.id">Delete</a></li>

                                <li>
                                    <a href='@Url.Action("editmemberbiodata","MemberBiodata",new { id=item.id})'>Edit</a>
                                </li>
                            </ul>
                        </div>
                    </td>

                </tr>
            }


        </tbody>
    </table>
</section>
<div class="modal fade" id="basic" tabindex="-1" role="basic" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Delete Confirmation</h4>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this Organization?
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" type="button" class="btn btn-default">Cancel</button>
                <button id="btnContinueDelete" type="button" class="btn btn-primary">Delete</button>
            </div>
        </div>
    </div>
</div>

